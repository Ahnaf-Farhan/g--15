{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run in Terminal (g++-15)",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-std=c++17",
                "-O2",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile and run with g++-15 in integrated terminal"
        },
        {
            "label": "Build & Run with Files (CF style)",
            "type": "shell",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-std=c++17",
                "-O2",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
                "&&",
                "./${fileBasenameNoExtension}",
                "<",
                "inputf.in",
                ">",
                "outputf.in",
                "&&",
                "cat",
                "outputf.in"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Run with inputf.in â†’ outputf.in"
        }
    ]
}